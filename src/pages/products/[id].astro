---
import Layout from "../../layouts/Layout.astro";
import Header from "../../components/Header.astro";
import Footer from "../../components/Footer.astro";
import AddToCartButton from "../../components/AddToCartButton";
import { getProducts } from "../../data/products";

// Get the product ID from the URL
const { id } = Astro.params;

// Fetch all products and find the one matching the ID
const products = await getProducts();
const product = products.find((p) => p.id === id);

// If product not found, redirect to 404
if (!product) {
    return Astro.redirect("/404");
}
---

<Layout
    title={`${product.title} | The Everyday Shop`}
    description={product.description ||
        `Shop ${product.title} from The Everyday Shop.`}
>
    <div class="flex min-h-screen flex-col">
        <Header />
        <main class="flex-1">
            <div class="mx-auto max-w-7xl px-8 py-12 sm:py-24">
                <!-- Breadcrumb -->
                <nav class="mb-8">
                    <ol class="flex items-center gap-2 text-sm text-gray-500">
                        <li>
                            <a
                                href="/"
                                class="hover:text-primary transition-colors"
                                >Home</a>
                        </li>
                        <li>
                            <span class="material-symbols-outlined text-xs"
                                >chevron_right</span>
                        </li>
                        <li>
                            <a
                                href="/shop"
                                class="hover:text-primary transition-colors"
                                >Shop</a>
                        </li>
                        <li>
                            <span class="material-symbols-outlined text-xs"
                                >chevron_right</span>
                        </li>
                        <li class="text-gray-900 font-medium">
                            {product.title}
                        </li>
                    </ol>
                </nav>

                <div class="lg:grid lg:grid-cols-2 lg:gap-x-16 lg:items-start">
                    {/* Image Gallery */}
                    <div class="flex flex-col-reverse">
                        <div
                            class="aspect-square w-full overflow-hidden rounded-2xl bg-gradient-to-br from-gray-50 to-gray-100 shadow-lg"
                        >
                            <img
                                src={product.image}
                                alt={product.title}
                                class="h-full w-full object-cover object-center"
                            />
                        </div>
                    </div>

                    {/* Product Info */}
                    <div class="mt-10 px-4 sm:mt-16 sm:px-0 lg:mt-0">
                        {/* Category */}
                        <p
                            class="text-sm font-medium uppercase tracking-wider text-primary/70 mb-3"
                        >
                            {product.category}
                        </p>

                        <h1
                            class="font-display text-4xl font-bold tracking-tight text-gray-900"
                        >
                            {product.title}
                        </h1>

                        <div class="mt-4">
                            <h2 class="sr-only">Product information</h2>
                            <p
                                class="text-3xl font-semibold tracking-tight text-primary"
                            >
                                ${product.price.toFixed(2)}
                            </p>
                        </div>

                        <div class="mt-6">
                            <h3 class="sr-only">Description</h3>
                            <div
                                class="space-y-6 text-base text-gray-600 leading-relaxed"
                            >
                                <p>
                                    {
                                        product.description ||
                                            `Elevate your daily routine with the ${product.title}. Meticulously crafted for both form and function, this item from our ${product.category} collection represents the perfect blend of style and utility.`
                                    }
                                </p>
                            </div>
                        </div>

                        <div class="mt-10">
                            <AddToCartButton
                                client:visible
                                variant="full"
                                product={{
                                    id: product.id,
                                    title: product.title,
                                    price: product.price,
                                    image: product.image,
                                    category: product.category,
                                }}
                            />
                        </div>

                        <section
                            aria-labelledby="details-heading"
                            class="mt-12"
                        >
                            <h2 id="details-heading" class="sr-only">
                                Additional details
                            </h2>
                            <div
                                class="divide-y divide-gray-200 border-t border-b border-gray-200"
                            >
                                {
                                    product.features &&
                                    product.features.length > 0 ? (
                                        <div class="py-6">
                                            <h3 class="font-medium text-gray-900">
                                                Features
                                            </h3>
                                            <ul class="mt-4 list-disc pl-4 text-sm text-gray-600 space-y-2">
                                                {product.features.map(
                                                    (feature) => (
                                                        <li>{feature}</li>
                                                    ),
                                                )}
                                            </ul>
                                        </div>
                                    ) : (
                                        <div class="py-6">
                                            <h3 class="font-medium text-gray-900">
                                                Features
                                            </h3>
                                            <ul class="mt-4 list-disc pl-4 text-sm text-gray-600 space-y-2">
                                                <li>Premium materials</li>
                                                <li>Designed for longevity</li>
                                                <li>Ethically sourced</li>
                                            </ul>
                                        </div>
                                    )
                                }

                                {/* Shipping info */}
                                <div class="py-6">
                                    <h3
                                        class="font-medium text-gray-900 flex items-center gap-2"
                                    >
                                        <span
                                            class="material-symbols-outlined text-lg"
                                            >local_shipping</span
                                        >
                                        Shipping
                                    </h3>
                                    <p class="mt-2 text-sm text-gray-600">
                                        Free shipping on orders over $50.
                                        Standard delivery 3-5 business days.
                                    </p>
                                </div>

                                {/* Returns info */}
                                <div class="py-6">
                                    <h3
                                        class="font-medium text-gray-900 flex items-center gap-2"
                                    >
                                        <span
                                            class="material-symbols-outlined text-lg"
                                            >autorenew</span
                                        >
                                        Returns
                                    </h3>
                                    <p class="mt-2 text-sm text-gray-600">
                                        30-day return policy. Items must be
                                        unused and in original packaging.
                                    </p>
                                </div>
                            </div>
                        </section>
                    </div>
                </div>
            </div>
        </main>
        <Footer />
    </div>
</Layout>
