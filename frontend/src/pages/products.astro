                        <div class="hidden md:flex items-center gap-8">
                            <a
                                class="text-zinc-600 dark:text-zinc-300 text-sm font-medium leading-normal hover:text-primary dark:hover:text-white transition-colors"
                                href="/">Home</a
                            >
                            <a
                                class="text-primary dark:text-white text-sm font-bold leading-normal border-b-2 border-primary pb-1"
                                href="/products">Products</a
                            >
                            <a
                                class="text-zinc-600 dark:text-zinc-300 text-sm font-medium leading-normal hover:text-primary dark:hover:text-white transition-colors"
                                href="#">About</a
                            >
                        </div>
                    </div>
                    <div class="flex flex-1 justify-end gap-2">
                        <button
                            class="flex items-center justify-center size-10 rounded-full text-zinc-500 dark:text-zinc-400 hover:bg-zinc-200/50 dark:hover:bg-zinc-800 transition-colors"
                        >
