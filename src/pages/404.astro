---
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
---

<Layout
    title="Page Not Found | The Everyday Shop"
    description="The page you're looking for doesn't exist."
>
    <div class="flex min-h-screen flex-col">
        <Header />
        <main class="flex-1 flex items-center justify-center">
            <div class="text-center px-4 py-16 sm:py-24">
                <span
                    class="material-symbols-outlined text-8xl text-gray-300 mb-6 block"
                >
                    sentiment_dissatisfied
                </span>
                <h1 class="font-display text-6xl font-bold text-gray-900 mb-4">
                    404
                </h1>
                <p class="text-xl text-gray-600 mb-8 max-w-md mx-auto">
                    Oops! The page you're looking for seems to have wandered
                    off.
                </p>
                <div class="flex flex-col sm:flex-row gap-4 justify-center">
                    <a
                        href="/"
                        class="inline-flex items-center justify-center px-6 py-3 bg-primary text-white font-medium rounded-lg hover:opacity-90 transition-opacity"
                    >
                        <span class="material-symbols-outlined mr-2 text-lg"
                            >home</span
                        >
                        Go Home
                    </a>
                    <a
                        href="/shop"
                        class="inline-flex items-center justify-center px-6 py-3 border border-primary text-primary font-medium rounded-lg hover:bg-primary/5 transition-colors"
                    >
                        <span class="material-symbols-outlined mr-2 text-lg"
                            >shopping_bag</span
                        >
                        Browse Shop
                    </a>
                </div>
            </div>
        </main>
        <Footer />
    </div>
</Layout>
