---
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
---

<Layout
    title="Contact Us | The Everyday Shop"
    description="Get in touch with The Everyday Shop. We'd love to hear from you about orders, products, or anything else."
>
    <div class="flex min-h-screen flex-col">
        <Header />
        <main class="flex-1">
            <section class="py-20 sm:py-28">
                <div class="mx-auto max-w-7xl px-8">
                    <div class="grid grid-cols-1 lg:grid-cols-2 gap-16">
                        <!-- Contact Info -->
                        <div>
                            <h1
                                class="font-display text-5xl font-bold tracking-tight text-gray-900 mb-6"
                            >
                                Get in Touch
                            </h1>
                            <p class="text-xl text-gray-600 mb-12">
                                Have a question about an order, a product, or
                                just want to say hello? We'd love to hear from
                                you.
                            </p>

                            <div class="space-y-8">
                                <div class="flex items-start gap-4">
                                    <span
                                        class="material-symbols-outlined text-2xl text-primary mt-1"
                                        >mail</span
                                    >
                                    <div>
                                        <h3 class="font-semibold text-gray-900">
                                            Email
                                        </h3>
                                        <a
                                            href="mailto:hello@theeverydayshop.com"
                                            class="text-gray-600 hover:text-primary transition-colors"
                                        >
                                            hello@theeverydayshop.com
                                        </a>
                                    </div>
                                </div>
                                <div class="flex items-start gap-4">
                                    <span
                                        class="material-symbols-outlined text-2xl text-primary mt-1"
                                        >call</span
                                    >
                                    <div>
                                        <h3 class="font-semibold text-gray-900">
                                            Phone
                                        </h3>
                                        <a
                                            href="tel:+18681234567"
                                            class="text-gray-600 hover:text-primary transition-colors"
                                        >
                                            +1 (868) 123-4567
                                        </a>
                                    </div>
                                </div>
                                <div class="flex items-start gap-4">
                                    <span
                                        class="material-symbols-outlined text-2xl text-primary mt-1"
                                        >location_on</span
                                    >
                                    <div>
                                        <h3 class="font-semibold text-gray-900">
                                            Address
                                        </h3>
                                        <p class="text-gray-600">
                                            Port of Spain, Trinidad and Tobago
                                        </p>
                                    </div>
                                </div>
                                <div class="flex items-start gap-4">
                                    <span
                                        class="material-symbols-outlined text-2xl text-primary mt-1"
                                        >schedule</span
                                    >
                                    <div>
                                        <h3 class="font-semibold text-gray-900">
                                            Business Hours
                                        </h3>
                                        <p class="text-gray-600">
                                            Monday - Friday: 9am - 6pm<br />
                                            Saturday: 10am - 4pm
                                        </p>
                                    </div>
                                </div>
                            </div>

                            <!-- Social Links -->
                            <div class="mt-12">
                                <h3 class="font-semibold text-gray-900 mb-4">
                                    Follow Us
                                </h3>
                                <div class="flex gap-4">
                                    <a
                                        href="#"
                                        class="w-10 h-10 rounded-full bg-gray-100 flex items-center justify-center text-gray-600 hover:bg-primary hover:text-white transition-colors"
                                    >
                                        <span class="material-symbols-outlined"
                                            >photo_camera</span
                                        >
                                    </a>
                                    <a
                                        href="#"
                                        class="w-10 h-10 rounded-full bg-gray-100 flex items-center justify-center text-gray-600 hover:bg-primary hover:text-white transition-colors"
                                    >
                                        <span class="material-symbols-outlined"
                                            >chat</span
                                        >
                                    </a>
                                </div>
                            </div>
                        </div>

                        <!-- Contact Form -->
                        <div class="bg-gray-50 rounded-xl p-8 sm:p-12">
                            <h2
                                class="font-display text-2xl font-semibold text-gray-900 mb-6"
                            >
                                Send us a message
                            </h2>
                            <form id="contact-form" class="space-y-6">
                                <div>
                                    <label
                                        for="name"
                                        class="block text-sm font-medium text-gray-700 mb-2"
                                    >
                                        Your Name
                                    </label>
                                    <input
                                        type="text"
                                        id="name"
                                        name="name"
                                        required
                                        class="w-full rounded-lg border-gray-300 shadow-sm focus:border-primary focus:ring-primary"
                                        placeholder="John Doe"
                                    />
                                </div>
                                <div>
                                    <label
                                        for="email"
                                        class="block text-sm font-medium text-gray-700 mb-2"
                                    >
                                        Email Address
                                    </label>
                                    <input
                                        type="email"
                                        id="email"
                                        name="email"
                                        required
                                        class="w-full rounded-lg border-gray-300 shadow-sm focus:border-primary focus:ring-primary"
                                        placeholder="john@example.com"
                                    />
                                </div>
                                <div>
                                    <label
                                        for="subject"
                                        class="block text-sm font-medium text-gray-700 mb-2"
                                    >
                                        Subject
                                    </label>
                                    <select
                                        id="subject"
                                        name="subject"
                                        class="w-full rounded-lg border-gray-300 shadow-sm focus:border-primary focus:ring-primary"
                                    >
                                        <option value="general"
                                            >General Inquiry</option
                                        >
                                        <option value="order"
                                            >Order Question</option
                                        >
                                        <option value="product"
                                            >Product Information</option
                                        >
                                        <option value="returns"
                                            >Returns & Exchanges</option
                                        >
                                        <option value="other">Other</option>
                                    </select>
                                </div>
                                <div>
                                    <label
                                        for="message"
                                        class="block text-sm font-medium text-gray-700 mb-2"
                                    >
                                        Message
                                    </label>
                                    <textarea
                                        id="message"
                                        name="message"
                                        rows="5"
                                        required
                                        class="w-full rounded-lg border-gray-300 shadow-sm focus:border-primary focus:ring-primary"
                                        placeholder="How can we help you?"
                                    ></textarea>
                                </div>
                                <button
                                    type="submit"
                                    class="w-full py-3 px-6 bg-primary text-white font-medium rounded-lg hover:opacity-90 transition-opacity flex items-center justify-center gap-2"
                                >
                                    <span
                                        class="material-symbols-outlined text-lg"
                                        >send</span
                                    >
                                    Send Message
                                </button>
                            </form>
                            <p
                                id="form-status"
                                class="mt-4 text-center text-sm hidden"
                            >
                            </p>
                        </div>
                    </div>
                </div>
            </section>
        </main>
        <Footer />
    </div>
</Layout>

<script>
    const form = document.getElementById("contact-form") as HTMLFormElement;
    const status = document.getElementById(
        "form-status",
    ) as HTMLParagraphElement;

    form?.addEventListener("submit", async (e) => {
        e.preventDefault();
        const formData = new FormData(form);

        // For now, just show success message - in production, connect to backend
        status.textContent =
            "Thank you for your message! We'll get back to you within 24-48 hours.";
        status.className = "mt-4 text-center text-sm text-green-600";
        form.reset();

        // Hide success message after 5 seconds
        setTimeout(() => {
            status.className = "mt-4 text-center text-sm hidden";
        }, 5000);
    });
</script>
